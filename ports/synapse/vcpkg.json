{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "synapse",
  "version": "0.1.0",
  "default-features": ["protos"],
  "dependencies": [
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    },
    "grpc",
    "protobuf",
    "science-libndtp",
    "science-scipp"
  ],
  "features": {
    "cli": {
      "description": "synapse CLI"
    },
    "protos": {
      "description": "synapse api proto files"
    },
    "tests": {
      "description": "synapse test suite",
      "dependencies": []
    }
  }
}
